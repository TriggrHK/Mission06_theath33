@* Have the form for adding movies to Joel Hilton's database, links to an asp.net model *@
@{
}

@model FilmCollection.Models.FilmData

<h1>Movie Form</h1>
<div>
    <form method="post">
        <label asp-for="Category">Category:</label>
        <input asp-for="Category" required/> <br />

        <label asp-for="Title">Title:</label>
        <input asp-for="Title" required/> <br />

        <label asp-for="Year">Year:</label>
        <input type="number" asp-for="Year" required/> <br />

        <label asp-for="Director">Director:</label>
        <input asp-for="Director" required/> <br />

        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating" required>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select> <br />

        <label asp-for="Edited">Edited:</label>
        <select asp-for="Edited">
            <option value="yes">Was Edited</option>
            <option value="no">Not Edited</option>
        </select> <br />

        <label asp-for="Lent_To">Lent to:</label>
        <input asp-for="Lent_To" /> <br />

        <label asp-for="Notes">Notes:</label>
        <input asp-for="Notes" maxlength="25"/> <br />

        <button type="submit">Add Movie</button>
    </form>
</div>