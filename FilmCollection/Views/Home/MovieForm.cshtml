@* Have the form for adding movies to Joel Hilton's database, links to an asp.net model *@
@{
}

@model FilmCollection.Models.FilmData

<h1>Movie Form</h1>
<div>
    <form method="post">
        <div asp-validation-summary="All"></div>

        <label asp-for="CategoryId">Category:</label>
        <select class="form-control-sm" asp-for="CategoryId" required>
            <option value="">Select a Category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select> <br />
        <label asp-for="Title">Title:</label>
        <input class="form-control-sm"  asp-for="Title" required /> <br />

        <label asp-for="Year">Year:</label>
        <input class="form-control-sm" type="number" asp-for="Year" required /> <br />

        <label asp-for="Director">Director:</label>
        <input class="form-control-sm" asp-for="Director" required /> <br />

        <label asp-for="Rating">Rating:</label>
        <select class="form-control-sm" asp-for="Rating" required>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select> <br />

        <label asp-for="Edited">Edited:</label>
        <select class="form-control-sm" asp-for="Edited">
            <option value="yes">Was Edited</option>
            <option value="no">Not Edited</option>
        </select> <br />

        <label asp-for="Lent_To">Lent to:</label>
        <input class="form-control-sm" asp-for="Lent_To" /> <br />

        <label asp-for="Notes">Notes:</label>
        <input class="form-control-sm" asp-for="Notes" maxlength="25" /> <br />

        <button class="btn btn-primary" type="submit">Add Movie</button>
    </form>
</div>